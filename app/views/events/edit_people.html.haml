%section
  .page-header
    %h1 Editing People for "#{@event.title}"
  .row
    .span16
      = semantic_form_for(@event) do |f|
        = dynamic_association :event_people, nil, f
        = f.actions do
          = f.action :submit, :button_html => {:class => "btn primary"}
          = f.action :cancel, as: :link, button_html: { class: 'btn' }
