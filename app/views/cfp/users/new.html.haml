%section
  .page-header
    %h1
      = @conference.title
      Sign up
  .row
    .span16
      = semantic_form_for(@user, :url => cfp_user_path) do |f|
        = f.inputs do
          = f.input :email
          = f.input :password
          = f.input :password_confirmation
        = f.actions do
          = f.action :submit, label: t("cfp.sign_up"), :button_html => {:class => "btn primary"}
          = f.action :cancel, label: t('cfp.back'), as: :link, button_html: { class: 'btn' }
