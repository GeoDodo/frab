%section
  .page-header
    %h1=t("cfp.edit_account") 
  .row
    .span16
      = semantic_form_for(@user, :url => cfp_user_path, :html => { :method => :put }) do |f|
        = f.inputs do
          = f.input :email
          = f.input :password, :hint => t("cfp.password_hint") 
          = f.input :password_confirmation
        = f.actions do
          = f.action :submit, label: t("cfp.update"), :button_html => {:class => "btn primary"}
          = f.action :cancel, label: t('cfp.back'), as: :link, button_html: { class: 'btn' }
