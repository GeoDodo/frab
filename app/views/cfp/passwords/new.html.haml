%section
  .page-header
    %h1=t("cfp.forgot_password_headline") 
  .row
    .span16
      = render "shared/flash", :flash => flash
      = semantic_form_for(@user, :url => cfp_user_password_path, :html => { :method => :post }) do |f|
        = f.inputs do
          = f.input :email
        = f.actions do
          = f.action :submit, label: t("cfp.send_reset_instructions"), :button_html => {:class => "btn primary"}
          = f.action :cancel, label: t('cfp.back'), as: :link, button_html: { class: 'btn' }
