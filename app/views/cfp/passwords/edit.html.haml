%section
  .page-header
    %h1=t("cfp.change_password_headline") 
  .row
    .span16
      = render "shared/flash", :flash => flash
      = semantic_form_for(@user, :url => cfp_user_password_path, :html => { :method => :put }) do |f|
        = f.hidden_field :reset_password_token
        = f.inputs do
          = f.input :password
          = f.input :password_confirmation
        = f.actions do
          = f.action :submit, label: t("cfp.change_password_button"), :button_html => {:class => "btn primary"}
          = f.action :cancel, label: t('cfp.back'), as: :link, button_html: { class: 'btn' }
